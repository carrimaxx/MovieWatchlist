@using MovieWatchList.Models;

@model List<Movie>

<h1>Movies to watch:</h1>

<div>
    <a class="btn btn-primary" asp-area="" asp-controller="Movie" asp-action="Add">Add a movie</a>
</div>

<div>

    @if (Model.Count == 0)
    {
        <h3>No movies yet!</h3>
    }
    else
    {
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Director</th>
                <th>MainActor</th>
                <th>Rating</th>
                <th></th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Director</td>
                    <td>@movie.MainActor</td>
                    <td>@movie.Rating</td>
                    <td>Update</td>
                </tr>
            }
        </table>
    }
</div>