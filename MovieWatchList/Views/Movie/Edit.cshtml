
<h1>Update movie details:</h1> @*@ViewBag.title</h1>*@

<form method="post" action="/movie/edit">
    <div class="form-group">
        <label>Title:</label>
        <input class="form-control" type="text" name="title" value="@ViewBag.movieEdit.Title" />
    </div>
    <div class="form-group">
        <label>Director:</label>
        <input class="form-control" type="text" name="director" value="@ViewBag.movieEdit.Director" />
    </div>
    <div class="form-group">
        <label>Genre:</label>
        <input class="form-control" type="text" name="genre" value="@ViewBag.movieEdit.Genre" />
    </div>
    <div class="form-group">
        <label>Rating:</label>
        <input class="form-control" type="text" name="genre" value="@ViewBag.movieEdit.Rating" />
    </div>
    <div class="form-group">
        <label>Main actor:</label>
        <input class="form-control" type="text" name="mainActor" value="@ViewBag.movieEdit.MainActor" />
    </div>

    <input type="hidden" value="@ViewBag.movieEdit.Id" name="movieId" />
    <div class="form-group">
        <input type="submit" value="Update movie" class="btn btn-secondary" />
    </div>
</form>


